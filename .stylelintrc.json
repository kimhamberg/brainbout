{
  "extends": ["stylelint-config-standard", "stylelint-config-clean-order"],
  "plugins": [
    "stylelint-value-no-unknown-custom-properties",
    "stylelint-declaration-block-no-ignored-properties",
    "stylelint-use-nesting",
    "stylelint-media-use-custom-media",
    "stylelint-scales"
  ],
  "rules": {
    "alpha-value-notation": "number",
    "color-hex-alpha": "never",
    "color-named": "never",
    "declaration-no-important": true,
    "font-weight-notation": "numeric",
    "function-url-no-scheme-relative": true,
    "no-unknown-custom-properties": null,
    "no-unknown-custom-media": null,
    "no-unknown-animations": true,
    "selector-no-qualifying-type": true,
    "selector-type-no-unknown": null,
    "csstools/value-no-unknown-custom-properties": [
      true,
      {
        "importFrom": ["src/style.css", "src/shared/board-theme.css"]
      }
    ],
    "plugin/declaration-block-no-ignored-properties": true,
    "csstools/use-nesting": "always",
    "csstools/media-use-custom-media": [
      "always-known",
      {
        "importFrom": ["src/style.css"]
      }
    ],
    "scales/alpha-values": [
      0, 0.05, 0.1, 0.2, 0.25, 0.3, 0.35, 0.4, 0.5, 0.6, 0.8, 0.9, 1
    ],
    "scales/border-widths": [{ "scale": [0, 1, 2, 4], "units": ["px"] }],
    "scales/font-sizes": [
      {
        "scale": [0.75, 0.875, 1, 1.125, 1.25, 1.5, 2, 2.5, 3],
        "units": ["rem"]
      }
    ],
    "scales/font-weights": [400, 500, 600, 700],
    "scales/letter-spacings": [
      { "scale": [-0.05, -0.025, 0, 0.025, 0.05, 0.1], "units": ["em"] }
    ],
    "scales/line-heights": [1, 1.25, 1.375, 1.5, 1.625, 2],
    "scales/radii": [
      { "scale": [0, 2, 4, 6, 8, 12, 16, 9999], "units": ["px"] }
    ],
    "scales/sizes": [
      { "scale": [32, 280, 320, 400, 480], "units": ["px"] },
      { "scale": [0.45], "units": ["em"] },
      { "scale": [1.5, 3, 3.5], "units": ["rem"] }
    ],
    "scales/space": [
      {
        "scale": [0, 0.25, 0.5, 0.75, 1, 1.5, 2, 2.5, 3, 4],
        "units": ["rem"]
      }
    ],
    "scales/z-indices": [0, 10, 20, 30, 40, 50]
  }
}
